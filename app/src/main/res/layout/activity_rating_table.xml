<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatingTableActivity"
    android:background="#7CC398">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="общий рейтинг учеников"
        android:textSize="32sp"
        android:textColor="#153626"
        android:gravity="center"
        android:background="#62A77C"
        />

    <TextView
        android:id="@+id/textWordsList"
        android:layout_width="410dp"
        android:layout_height="688dp"
        android:text="Здесь будет таблица никнейм: средний балл за все разделы"
        android:textColor="#153626"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        tools:layout_editor_absoluteX="1dp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>